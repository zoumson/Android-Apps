<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/oval"
    android:orientation="horizontal">

    <ImageView
       android:layout_margin="10dp"
        android:background="@drawable/oval_white"
        android:id="@+id/skillProgramImgID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/skillProgramTxt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:shadowColor="@color/blue"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:clickable="false"
        android:fontFamily="fantasy" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/skillProgramBarID"
        custom:donut_background_color="@color/white"
        custom:donut_finished_stroke_width="9dp"
        custom:donut_unfinished_stroke_width="7dp"
        custom:donut_unfinished_color="@color/red"
        custom:donut_finished_color="@color/green"
        custom:donut_text_size="10dp"
        custom:donut_text_color="@color/black"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</LinearLayout>