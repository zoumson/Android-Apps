<?xml version="1.0" encoding="utf-8"?>
<!--All page is displayed as single view on screen -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backall">

    <!--Header -->
    <LinearLayout
        android:layout_gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Log out -->
<LinearLayout
    android:layout_width="60dp"
    android:layout_height="40dp"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:background="@drawable/back_log_out">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/outCV"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="@string/log_out"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5">

        </Button>



    </RelativeLayout>


</LinearLayout>
        <!-- End of Log out -->

        <!--Title -->

      <TextView
          android:background="@drawable/cv"
          android:id="@+id/cv"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_gravity="center"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="0dp"
          android:layout_marginBottom="10dp"
          android:text="@string/cv"
          android:gravity="center"
          android:textColor="@color/blue"
          android:textStyle="bold|italic"
          android:textSize="50dp"
          android:fontFamily="fantasy"/>
        <!-- End of Title -->

    </LinearLayout>
    <!-- End of Header -->

    <!-- Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="125dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


          <ListView
              android:id="@+id/menuListView"
              android:scrollbarThumbVertical="@drawable/custom_scroll_style"
              android:fadeScrollbars="false"
              android:scrollbarSize="30dp"
              android:scrollbarAlwaysDrawVerticalTrack="true"
              android:scrollbars="vertical"
              android:scrollbarStyle="insideInset"
              android:scrollbarFadeDuration="0"
              android:padding="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="40dp"
              android:background="@drawable/backlist"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:divider="@color/white"
              android:dividerHeight="15dp"
              android:layout_weight="1"
              android:gravity="center" />


</LinearLayout>

    <TextView
        android:id="@+id/myPosition"
        android:layout_gravity="center|bottom"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bac"
        android:gravity="center"
        android:padding="5dp"
        android:text="Software Engineer"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:fontFamily="fantasy" />

</FrameLayout>
